rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // User Profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Public Pages & Links
    match /pages/{pageId} {
      allow get, list: if true;
      allow create: if isOwner(request.resource.data.ownerId);
      // Use get() to check ownerId on the existing document for updates/deletes
      allow update, delete: if isOwner(get(/databases/$(database)/documents/pages/$(pageId)).data.ownerId);

      match /links/{linkId} {
        allow get, list: if true;
        // Check ownership of the parent page for any write operation on links
        allow write: if isOwner(get(/databases/$(database)/documents/pages/$(pageId)).data.ownerId);
      }
    }

    // Blog Posts - DEFINITIVE FIX
    match /posts/{postId} {
      // READ Rules:
      // Allow any authenticated user to try and LIST posts.
      // Firestore will then verify that the query's constraints (e.g., `where('ownerId', '==', request.auth.uid)`)
      // ensure that only documents permitted by the `get` rule are returned.
      allow list: if isSignedIn();

      // An individual post can be read (GET) if:
      // 1. It is published (publicly visible)
      // OR
      // 2. The user is the owner of the post (can see their own drafts)
      allow get: if resource.data.status == 'published' || isOwner(resource.data.ownerId);

      // WRITE Rules:
      // On create, the new document's ownerId must match the user.
      allow create: if isOwner(request.resource.data.ownerId);
      // On update/delete, the existing document's ownerId must match the user.
      allow update, delete: if isOwner(resource.data.ownerId);
    }

    // Slug Lookups
    match /slug_lookups/{slug} {
      allow get: if true;
      allow create: if isOwner(get(/databases/$(database)/documents/pages/$(request.resource.data.pageId)).data.ownerId);
      allow update, delete: if isOwner(get(/databases/$(database)/documents/pages/$(resource.data.pageId)).data.ownerId);
    }
  }
}
