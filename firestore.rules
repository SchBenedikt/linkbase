rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /pages/{pageId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      
      match /links/{linkId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/pages/$(pageId)).data.ownerId == request.auth.uid;
      }
    }

    match /posts/{postId} {
      // The `get` rule is for direct document access. It's secure.
      // A user can read their own post, whatever the status.
      // A user can read any published post.
      allow get: if (resource.data.status == 'published') || (isOwner(resource.data.ownerId));

      // The `list` rule is for queries. We allow anyone to issue list queries.
      // Firestore will then use the `get` rule to validate that the query's
      // constraints (the `where` clauses) are strong enough to guarantee
      // that only permitted documents are returned.
      allow list: if true;

      // WRITE: Allow creating, updating, and deleting only for the owner.
      allow create: if isOwner(request.resource.data.ownerId);
      allow update, delete: if isOwner(resource.data.ownerId);
    }

    match /slug_lookups/{slug} {
      allow get: if true;
      allow create: if isSignedIn() 
                    && get(/databases/$(database)/documents/pages/$(request.resource.data.pageId)).data.ownerId == request.auth.uid;
                    // Note: Does not prevent overwriting existing slugs by other users in this simplified rule.
                    // A more robust rule would also check `!exists()`.
      allow update, delete: if isSignedIn() 
                    && get(/databases/$(database)/documents/pages/$(resource.data.pageId)).data.ownerId == request.auth.uid;
    }
  }
}
